{
  "name": "electron-boilerplate",
  "version": "0.0.1",
  "homepage": "./",
  "main": "./public/electron.js",
  "description": "Electron boilerplate with React",
  "private": true,
  "scripts": {
    "electron:react:start": "cross-env BROWSER=none react-scripts start",
    "electron:react:build": "react-scripts build && tsc -p tsconfig.electron.json --outDir build",
    "electron:react:watch": "wait-on tcp:3000 && electron .",
    "electron:cleanup": "concurrently \"rimraf build\" \"rimraf dist\" \"rimraf public/**/*.{js,d.ts,js.map}\"",
    "electron:compiler": "tsc -p tsconfig.electron.json --outDir public",
    "electron:build": "npm run electron:cleanup && npm run electron:compiler",
    "electron:watch": "tsc -p tsconfig.electron.json --outDir public -w",
    "electron:start": "npm run electron:watch && electron .",
    "electron:release": "npm run electron:cleanup && npm run electron:react:build && npm run electron:compiler && electron-builder",
    "electron:dev": "npm run electron:build && concurrently -C -p -k \"npm run electron:watch\" \"npm run electron:react:start\" \"npm run electron:react:watch\""
  },
  "author": {
    "name": "Restu Wahyu Saputra",
    "email": "restuwahyu13@gmail.com",
    "url": "https://github.com/restuwahyu13"
  },
  "maintainers": [
    "Restu Wahyu Saputra"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/restuwahyu13/electron-boilerplate"
  },
  "license": "UNLICENSE",
  "engines": {
    "node": "^14",
    "npm": "^6"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.ts",
          "**/*.tsx"
        ],
        "rules": {
          "no-restricted-globals": 0,
          "jsx-a11y/alt-text": 0,
          "no-throw-literal": 0
        },
        "globals": {
          "self": "writable"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@ant-design/icons": "^4.7.0",
    "antd": "^4.20.7",
    "axios": "^0.27.2",
    "dotenv": "^16.0.1",
    "electron-is-dev": "^2.0.0",
    "electron-reload": "^2.0.0-alpha.1",
    "js-cookie": "^3.0.1",
    "jwt-transform": "^0.0.3",
    "node-disk-storage": "^0.0.6",
    "qrcode.react": "^3.0.2",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-router-dom": "^5.3.3",
    "socket.io-client": "^4.5.1"
  },
  "devDependencies": {
    "@loadable/component": "^5.15.2",
    "@types/antd": "^1.0.0",
    "@types/autoprefixer": "^10.2.0",
    "@types/axios": "^0.14.0",
    "@types/concurrently": "^7.0.0",
    "@types/dotenv": "^8.2.0",
    "@types/electron": "^1.6.10",
    "@types/electron-is-dev": "^1.1.1",
    "@types/js-cookie": "^3.0.2",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/loadable__component": "^5.13.4",
    "@types/node": "^16.11.36",
    "@types/qrcode.react": "^1.0.2",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.4",
    "@types/react-router-dom": "^5.3.3",
    "@types/rimraf": "^3.0.2",
    "@types/socket.io-client": "^3.0.0",
    "@types/wait-on": "^5.3.1",
    "autoprefixer": "^10.4.7",
    "concurrently": "^7.2.0",
    "cross-env": "^7.0.3",
    "electron": "^18.2.4",
    "electron-builder": "^23.0.3",
    "electronmon": "^2.0.2",
    "postcss": "^8.4.14",
    "react-scripts": "5.0.1",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.0.24",
    "typescript": "^4.6.4",
    "wait-on": "^6.0.1"
  },
  "build": {
    "productName": "ElectronBoilerplate",
    "appId": "com.electron.ElectronBoilerplate",
    "compression": "maximum",
    "nodeVersion": "^14",
    "directories": {
      "buildResources": "public"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    }
  },
  "electronmon": {
    "patterns": [
      "!**/**",
      "src/main/*"
    ],
    "logLevel": "quiet"
  }
}
